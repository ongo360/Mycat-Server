<!DOCTYPE mycat:rule SYSTEM "rule.dtd">
<mycat:rule xmlns:mycat="http://io.mycat/">
	<tableRule name="user_rule">
		<rule>
			<columns>id</columns>
			<algorithm>user_rule</algorithm>
		</rule>
	</tableRule>
	<tableRule name="order_rule">
		<rule>
			<columns>id</columns>
			<algorithm>order_rule</algorithm>
		</rule>
	</tableRule>
	<function name="user_rule" class="io.mycat.route.function.PartitionBySubstringRange">
		<property name="fromIndex">-1</property>
		<property name="length">2</property>
		<property name="mapFile">/user-partition.txt</property>
	</function>
	<function name="order_rule" class="io.mycat.route.function.PartitionBySubstringRange">
		<property name="fromIndex">-1</property>
		<property name="length">2</property>
		<property name="mapFile">/order-partition.txt</property>
	</function>
</mycat:rule>
